generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  profiles  Profile[]
}

model Source {
  id            String   @id @default(cuid())
  name          String   @unique
  type          String   // "GREENHOUSE" for MVP
  orgIdentifier String   // e.g. "stripe" or company board identifier
  enabled       Boolean  @default(true)
  lastRunAt     DateTime?

  jobs          Job[]
}

model Job {
  id          String   @id @default(cuid())
  sourceId    String
  externalId  String
  title       String
  company     String
  location    String
  url         String
  snippet     String?
  firstSeenAt DateTime @default(now())
  lastSeenAt  DateTime @default(now())

  source      Source   @relation(fields: [sourceId], references: [id])
  matches     Match[]

  @@unique([sourceId, externalId])
}

model Profile {
  id        String   @id @default(cuid())
  userId    String
  name      String
  keywords  String   // e.g. "electrical engineer; power"
  location  String?  // e.g. "Vancouver"
  remoteOnly Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])
  matches   Match[]
}

model Match {
  id        String   @id @default(cuid())
  profileId String
  jobId     String
  matchedAt DateTime @default(now())

  profile   Profile  @relation(fields: [profileId], references: [id])
  job       Job      @relation(fields: [jobId], references: [id])

  @@unique([profileId, jobId])
}